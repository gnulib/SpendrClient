<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.integratingfactor.spendr.spendrclient.ShowResourceActivity">

    <EditText
        android:id="@+id/resource_key"
        android:layout_width="254dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="enter resource key name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resource_key_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:onClick="showResource"
        android:text="Show"
        app:layout_constraintBaseline_toBaselineOf="@+id/resource_key"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resource_key" />

    <TextView
        android:id="@+id/res_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Owner"
        app:layout_constraintBaseline_toBaselineOf="@+id/res_owner_val"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/res_owner_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="244dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/res_owner"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Value"
        app:layout_constraintBaseline_toBaselineOf="@+id/res_value_val"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/res_value_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/res_value"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
